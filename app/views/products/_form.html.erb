<%= form_with(model: @product, local: true) do |form|  %>

    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
        
    </div>
    <div>
        <%= form.label :price %>
        <%= form.text_field :price %>
    </div>
    <div>
        <%= form.label :stock %>
        <%= form.text_field :stock %>
    </div>
    <div>
        <%= form.submit %>
    </div>
    
<%end%>
